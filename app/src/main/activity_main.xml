<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 标题 -->
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="舞萌DX账户信息查询"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- UserID 输入 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UserID:" />

    <EditText
        android:id="@+id/editUserId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入用户ID"
        android:inputType="text" />

    <!-- Token 输入 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Access Token:" />

    <EditText
        android:id="@+id/editToken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入访问令牌"
        android:inputType="text" />

    <!-- 选项 -->
    <CheckBox
        android:id="@+id/checkGetItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取详细信息"
        android:layout_marginTop="10dp" />

    <!-- 按钮行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <!-- 获取UserID按钮 -->
        <Button
            android:id="@+id/btnGetUserId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="获取UserID"
            android:layout_marginEnd="8dp" />

        <!-- 查询按钮 -->
        <Button
            android:id="@+id/btnQuery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="查询"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <!-- 清空按钮 -->
        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="清空结果"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- 结果区域标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询结果:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <!-- 可滚动的结果区域 -->
    <ScrollView
        android:id="@+id/scrollResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f0f0"
            android:padding="10dp"
            android:textSize="14sp"
            android:textColor="#333333" />

    </ScrollView>

</LinearLayout>
